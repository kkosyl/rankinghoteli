<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
   
    <div class="Top">
        <div id="Logo" class="col-md-4 col-sm-1">
            <img src="~/Content/Images/Logo.png" />
        </div>
        <div id="Search" class="col-md-8 col-sm-1">
            <input id="search" type="text" />
            <button id="btnSearch" type="button" value="Szukaj"><span class="glyphicon glyphicon-search"></span> Szukaj</button>
        </div>
    </div>

    <div class="container body-content col-lg-12 col-sm-1">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>