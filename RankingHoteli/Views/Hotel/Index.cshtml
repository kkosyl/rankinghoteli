@model IEnumerable<RankingHoteli.ViewModels.HotelListViewModel>
@{
    ViewBag.Title = "Ranking Hoteli";
}

<h2>Spis</h2>

<div class="table">
    <table>
        <tr>
            <th>
                Nazwa Hotelu
            </th>
            <th>
                Adres
            </th>
            <th>
                Opis
            </th>
            <th>
                Cena
            </th>
            <th>
                Zdjęcie
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Address
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    <img src="~/Content/Photos/@item.Picture" />
                </td>
            </tr>
        }
    </table>
</div>