@model IEnumerable<RankingHoteli.ViewModels.HotelListViewModel>
@{
    ViewBag.Title = "Ranking Hoteli";
}

<h2>Spis</h2>

@Html.ActionLink("Dodaj", "AddHotel")

<div class="table">
    <table>
        <tr>
            <th>
                Zdjęcie
            </th>
            <th>
                Nazwa Hotelu
            </th>
            <th>
                Adres
            </th>
            <th>
                Opis
            </th>
            <th>
                Cena
            </th>
            <th>
                Opcje
            </th>
        </tr>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/Content/Photos/@item.Picture" style="height: 150px"/>
                    </td>
                    <td>
                        @Html.ActionLink(item.Name, "Details", new { id = item.HotelId})
                    </td>
                    <td>
                        @item.Address
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        @item.Price
                    </td>
                    <td>
                        @Html.ActionLink("Usuń", "Delete", new { id = item.HotelId })
                    </td>
                </tr>
            }
        }
    </table>
</div>